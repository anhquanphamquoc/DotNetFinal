@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh sách sản phẩm";
}
<h4>Danh sách sản phẩm</h4>
<a  asp-action="Create" asp-controller="Product">Thêm sản phẩm mới</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Chi tiết sản phẩm</th>
            <th scope="col">Giá bán</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Slug</th>
            <th scope="col">Phân loại</th>
            <th scope="col">Nhà xuất bản</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="~/images/products/@item.Image" width="120" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>